extends layout2.pug 

block content 
  div(style="width: 100%; height: 100vh; display: flex; flex-direction: row;")
    div(style="width: 25%; height: 100%;")
      include includes/sidebar.pug
    div(style="width: 75%; padding: 20px; overflow-y: auto;")
      .container.my-5.mt-6
        h3 Users list
        table.table.table-striped.table-bordered
          thead.table-dark
            tr
              th(scope='col') UserName
              th(scope='col') Email
              //- th(scope='col') Age 
              th(scope='col') Gender
              th(scope='col') NIN
              th(scope='col') PhoneNumber 
              th(scope='col') Role
              th(scope='col') EmployeeId  
          tbody
            if users.length 
              each user in users 
                tr 
                  td #{user.userName}
                  td #{user.email}
                  //- td #{user.age}
                  td #{user.gender}
                  td #{user.nin}
                  td #{user.phoneNumber}
                  td #{user.role}
                  td #{user.employeeId}
        a.btn.btn-dark.mt-3(href='/registeruser') Register New User
      script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js')
