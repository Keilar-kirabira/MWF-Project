extends layout2.pug 

block content 
  div(style="width: 100%; height: 100vh; display: flex; flex-direction: row;")
    div(style="width: 25%; height: 100%;")
      include includes/sidebar.pug
    div(style="width: 75%; padding: 20px; overflow-y: auto;")
      .container.my-5.mt-6
        h3 Products 
        table.table.table-striped.table-bordered
          thead.table-dark
            tr
              th(scope='col') Product Name
              th(scope='col') Product Type
              th(scope='col') Quantity 
              th(scope='col') Cost Price (UGX)
              th(scope='col') Product Price (UGX)
              th(scope='col') Supplier Name 
              th(scope='col') Date
              th(scope='col') Quality 
              th(scope='col') Color
              th(scope='col') Measurements
              th(scope='col') Phone Number
              th(scope='col') Status 
              th(scope='col') Update 
              th(scope='col') Delete
          tbody
            if items.length 
              each item in items
                tr
                  td #{item.productName}
                  td #{item.productType} 
                  td #{item.quantity}
                  td #{item.costPrice}
                  td #{item.productPrice}
                  td #{item.supplierName}
                  td #{moment(item.dateBought).format("DD-MM-YYYY")}
                  td #{item.quality}
                  td #{item.color}
                  td #{item.measurements}
                  td #{item.phoneNumber}
        a.btn.btn-dark.mt-3(href='/stock') Add New Stock
        script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js')
