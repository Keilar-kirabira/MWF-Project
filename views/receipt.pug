doctype html
html
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title MWF | Receipt
    link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css')
    link(rel='stylesheet' href='/css/receipt.css') 
  body
    .container.my-5
      .receipt-box
        .watermark MWF
        .text-center
          img(src='/images/mwflogo.png' alt='MWF Logo' class='receipt-logo')

        h2.text-center MAYONDO WOOD AND FURNITURE LIMITED
        p.text-center A B2B Wood and Furniture Company
        hr

        h4.text-center RECEIPT

        p Date: #{moment(sale.paymentDate).format("DD-MM-YYYY")}
        p Customer: #{sale.customerName}
        p Sales Agent: #{sale.salesAgent.userName}

        table.table.table-bordered.mt-3
          thead
            tr
              th Product Type
              th Product Name
              th Quantity
              th Unit Price
              th Transport
              th Total Price
          tbody
            tr
              td #{sale.productType}
              td #{sale.productName}
              td #{sale.quantity}
              td #{sale.unitPrice}
              td #{sale.transportCheck}
              td #{sale.totalPrice}

        p.mt-3 Payment Method: #{sale.paymentType}

        hr
        h5.text-center Thank you for your purchase.

        .text-center.mt-3
          button.btn.btn-dark(onclick="window.print()") Print Receipt
