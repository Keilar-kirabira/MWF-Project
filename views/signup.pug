meta(charset="UTF-8")
meta(name="viewport", content="width=device-width,initial-scale=1")
title Signup MWF
link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css")
link(rel="stylesheet", href="/css/login.css")
.login-card.container.mt-5
  h3.text-center.mb-3 Mayondo Wood and Furniture Ltd
  p.text-center.text-muted Signup Form
  form#loginForm(action="/signup", method="post", novalidate)
    .mb-3
      label.form-label(for="username") Username:
      input.form-control#username(type="text", name="username", placeholder="Enter username", required)
      .invalid-feedback Please enter your valid username.
    .mb-3
      label.form-label(for="email") Email:
      input.form-control#email(type="text", name="email", placeholder="Enter email", required)
      .invalid-feedback.
        
        Please enter your valid email.    
    .mb-3
      label.form-label(for="password") Password:
      input.form-control#password(type="password", name="password", placeholder="Enter password", minlength="6", required)
      .invalid-feedback.
        
        Password must be at least 6 characters.   
    .mb-3
      label.form-label(for="role") Select Role:
      select#role.form-select(name="role", required)
        option(value, selected, disabled) Select your role
        option(value="manager") Manager
        option(value="sales attendant") Sales Agent
      .invalid-feedback Please select your role.
    .d-grid
      button.btn.btn-dark(type="submit") Signup
    p.text-center.mt-3
      | Already have an account?
      a(href="/login")  login
script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js")
