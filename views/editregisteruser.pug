extends layout2.pug 

block content 
  div(style="width: 100%; height: 100vh; display: flex; flex-direction: row;")
    div(style="width: 25%; height: 100%;")
      include includes/sidebar.pug

    div(style="width: 75%; padding: 20px; ") 
      h3.text-center.mb-3  Edit User Register Form
      .register-card.container.mt-4
        form#Signup(action=`/editusers/${user._id}?_method=PUT`, method="post" ,  enctype="multipart/form-data")
          .row.g-3
            .col-md-6
              label.form-label(for="profileImage") Profile Image
              input.form-control#profileImage(type="file", name="profileImage", value='' accept="image/*", required)
              .invalid-feedback Please upload an image.
            .col-md-6
              label.form-label(for="userName") Username
              input.form-control#userName(type="text", name="userName", placeholder="Enter Username", value=`${user.userName}` required)
              .invalid-feedback Please enter your valid username.

            .col-md-6
              label.form-label(for="email") Email
              input.form-control#email(type="text", name="email", placeholder="Enter email", value=`${user.email}` required)
              .invalid-feedback Please enter your valid email.
            .col-md-6
              label.form-label(for='birthDate') Date of Birth
              input#birthDate.form-control(type='date' name='birthDate' value=`${user.birthDate}` required='') 
            
            .col-md-4
              label.form-label(for="gender") Gender
              select#gender.form-select(name="gender", required)
                option(value=`${user.gender}` selected) #{user.gender}
                option(value="Female") Female
                option(value="Male") Male
              .invalid-feedback Please select your gender.

            .col-md-4
              label.form-label(for="nin") National ID Number (NIN)
              input.form-control#nin(type="text", name="nin", placeholder="Enter NIN", minlength="13", value=`${user.nin}` required)
              .invalid-feedback Please enter a valid NIN.

            .col-md-4
              label.form-label(for="phoneNumber") Phone Number
              input.form-control#phoneNumber(type="tel", name="phoneNumber",value=`${user.phoneNumber}` placeholder="Enter +256------", minlength="10", required)
              .invalid-feedback Please enter a valid phone number.

            .col-md-6
              label.form-label(for="role") Select Role
              select#role.form-select(name="role", required)
                option(value=`${user.role}` selected, ) #{user.role}
                option(value="Manager") Manager
                option(value="Sales Agent") Sales Agent
              .invalid-feedback Please select your role.

            .col-md-6
              label.form-label(for="password") Password
              input.form-control#password(type="password", name="password", placeholder="Enter password", minlength="6", value=`${user.password}` required)
              .invalid-feedback Password must be at least 6 characters.
            
            .col-md-4
              label.form-label(for="nextofKin") Next of Kin Name
              input.form-control#nextofKin(type="text", name="nextofKin", placeholder="nextofKin name", value=`${user.nextofKin}` required)
              .invalid-feedback Please enter a valid next of kin name.
            .col-md-4
              label.form-label(for="nokNumber") Next of Kin Phone Number
              input.form-control#nokNumber(type="text", name="nokNumber", placeholder="nextofKin number ", value=`${user.nokNumber}` required)
              .invalid-feedback Please enter a valid next of kin Number.  
            .col-md-4
              label.form-label(for="employeeId") Employee ID
              input.form-control#employeeId(type="text", name="employeeId", placeholder="MWF-001", minlength="7", value=`${user.employeeId}` required)
              .invalid-feedback Please enter a valid Employee ID.

            .row.mt-3
            .col-12
              button.btn.btn-dark(type="submit") Add User

   
  script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js")
