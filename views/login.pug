doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title MWF|Login
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css')
  link(rel='stylesheet' href='/css/login.css')
.login-card.container.mt-5
  h3.text-center.mb-3 Mayondo Wood and Furniture Ltd
  p.text-center.text-muted Login to continue
  form#loginForm(action='/login' method='post' novalidate='')
    .mb-3
      label.form-label(for='email') Email or Username
      input#email.form-control(type='text' name='email' placeholder='Enter email or username' required='')
      .invalid-feedback
        | Please enter your valid email or username.
    .mb-3
      label.form-label(for='password') Password
      input#password.form-control(type='password' name='password' placeholder='Enter password' minlength='6' required='')
      .invalid-feedback
        | Password must be at least 6 characters.
    .d-grid
      button.btn.btn-success(type='submit') Login
    p.text-center.mt-3
      a(href='#') Forgot password?
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js')
script(src='')
