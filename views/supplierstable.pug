doctype html
html
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title MWF | Stocktable
    link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css')
    link(rel='stylesheet' href='/css/stock.css')

  body
    .container.my-5.mt-6
      .d-flex.justify-content-between.align-items-center.mb-3
        h3.mb-0 Suppliers
        a.btn.btn-dark(href='/Addsupplier') Register Supplier

      // Search field
      .mb-3
        input#searchInput.form-controlw-25(type='text' placeholder='Search suppliers...')

      table.table.table-striped.table-bordered
        thead.table-dark
          tr
            th(scope='col') Supplier Name
            th(scope='col') Supplier Category
            th(scope='col') Product Name
            th(scope='col') Quantity
            th(scope='col') Date
            th(scope='col') Phone Number
            th(scope='col') Email
            th(scope='col') Physical Address
            //- th(scope='col') Select Status

        tbody#supplierTable
          if suppliers.length 
            each item in suppliers 
              tr 
                td #{item.supplierName}
                td #{item.supplierCategory}
                td #{item.productName}
                td #{item.quantity}
                td #{moment(item.dateBought).format("DD-MM-YYYY")}
                td #{item.phoneNumber}
                td #{item.email}
                td #{item.physicaladdress}
                //- td #{item.status}

    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js')
    script(src="js/supplierstable.js")
      
